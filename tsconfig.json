{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "Node10",
    "newLine": "lf",
    "noEmit": false,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "temp",
    "plugins": [{ "name": "next" }],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "useDefineForClassFields": true,
    "useUnknownInCatchVariables": true
  },
  "exclude": [
    ".next",
    ".swc",
    "coverage",
    "node_modules",
    "playwright-report",
    "test-results"
  ],
  "include": [
    ".eslintrc.base.cjs",
    ".eslintrc.cjs",
    ".eslintrc.next.cjs",
    ".eslintrc.react.cjs",
    ".prettierrc.mjs",
    ".stylelintrc.base.mjs",
    ".stylelintrc.mjs",
    "**/*.cjs",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
